@hostname = http://localhost
@port = 4000
@host = {{hostname}}:{{port}}
@contentType = application/json

### get all data petugas
GET {{host}}/petugas HTTP/1.1

### get data petugas by id
GET {{host}}/petugas/2 HTTP/1.1

### create data petugas
POST {{host}}/petugas HTTP/1.1
Content-Type: {{contentType}}

{
    "nama":"Paijo",
    "instansi":"PT. SENTOSA",
